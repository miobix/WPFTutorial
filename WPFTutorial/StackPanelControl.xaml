<Window x:Class="WPFTutorial.StackPanelControlxaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTutorial"
        mc:Ignorable="d"
        Title="StackPanelControlxaml" Height="300" Width="400">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center">Next set of buttons are stacked vertically and horitonztally. try rezising this screen!</TextBlock>
    <StackPanel>
        <!--Stack panel does not wrap content, but stretches content in one direction-->
        <!--Ex: button will use full width and then stack the next button below-->
        <Button>Button 1</Button>
        <Button>Button 2</Button>
        <Button>Button 3</Button>
        <Button>Button 4</Button>
        <Button>Button 5</Button>
        <Button>Button 6</Button>
    </StackPanel>

        <StackPanel Orientation="Horizontal" Height="100">
          
            <Button>Button 1</Button>
            <Button>Button 2</Button>
            <Button>Button 3</Button>
            <Button>Button 4</Button>
            <Button>Button 5</Button>
            <Button>Button 6</Button>
        </StackPanel>

      
    </StackPanel>
</Window>
